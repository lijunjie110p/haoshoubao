.container {
  padding: 0 20rpx;
  background: #FFFFFF;
  width: 710rpx;
}
.main {
  width: 750rpx;
  position: relative;
}
.font-blod {
  font-weight: bold;
}
.main-bg {
  background: #FFBA37;
}
.main-color {
  color: #FFBA37;
}
.white-color {
  color: #FFF;
}
.white-bg {
  background-color: #FFF;
}
.gray-bg {
  background: #F2F2F2;
}
.padding-width-base {
  padding: 0 30rpx;
}
.sub-btn {
  background: 'linear-gradient(270deg,rgba(255,186,0,1),rgba(255,207,0,1))';
  height: '90rpx';
  color: '#FFF';
  border: 'none';
  font-size: '36rpx';
}
page {
  background: #F2F2F2;
}
.user {
  background: -webkit-linear-gradient(right, #ffba00, #ffcf00);
  background: linear-gradient(270deg, #ffba00, #ffcf00);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 400rpx;
  padding: 0 30rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.user .u-image {
  background-color: transparent;
}
.user .name {
  font-size: 40rpx;
  font-weight: bold;
}
.user .name .status {
  border-radius: 5rpx;
  padding: 0 10rpx;
  background: rgba(255, 255, 255, 0.3);
  color: #FFF;
  font-size: 24rpx;
  margin-left: 10rpx;
}
.user .code {
  height: 50rpx;
  margin-top: 20rpx;
  background: -webkit-linear-gradient(right, #ffa320, #ffb853);
  background: linear-gradient(-90deg, #ffa320, #ffb853);
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #FFF;
  padding: 0 20rpx;
  width: 280rpx;
}
.group {
  position: absolute;
  top: 350rpx;
  left: 0;
  right: 0;
  padding: 0 30rpx;
}
.group pad .u-cell-box {
  border-radius: 10px;
  overflow: hidden;
}
.group .card {
  border-radius: 10px;
  margin: 30rpx 0;
  background: #FFFFFF;
  overflow: hidden;
}
.group .card .title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 25rpx;
}
.lock-tips {
  height: 100rpx;
  margin: 0 !important;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  text-align: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.big-tips {
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  font-weight: 500;
}
.small-tips {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  font-weight: 500;
  margin-top: 20rpx;
}
.container-lock {
  background-color: #FCFCFC;
}
.container-confirm {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 16%;
  position: absolute;
  bottom: 0;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  text-align: center;
}
.container-confirm view {
  color: #666666;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  width: 80%;
  margin: 0 5%;
  height: 100rpx;
  line-height: 100rpx;
  border: 1px solid #F0F0F0;
  border-radius: 50rpx;
}
.container-confirm .disable-confirm {
  color: #A0A0A0;
  background-color: #F5F5F5;
}

